{
    "task": [
        {
            "name": "DeliveryJobs",
            "label": "$task.DeliveryJobs.label",
            "entry": "DeliveryJobsMain",
            "description": "$task.DeliveryJobs.description",
            "option": [
                "ValleyIV",
                "Wuling"
            ]
        }
    ],
    "option": {
        "ValleyIV": {
            "type": "switch",
            "label": "$global.region.ValleyIV",
            "default_case": "Yes",
            "cases": [
                {
                    "name": "Yes",
                    "pipeline_override": {
                        "DeliveryJobsValleyIV": {
                            "enabled": true
                        }
                    }
                },
                {
                    "name": "No",
                    "pipeline_override": {
                        "DeliveryJobsValleyIV": {
                            "enabled": false
                        }
                    }
                }
            ]
        },
        "Wuling": {
            "type": "switch",
            "label": "$global.region.Wuling",
            "default_case": "Yes",
            "cases": [
                {
                    "name": "Yes",
                    "pipeline_override": {
                        "DeliveryJobsWuling": {
                            "enabled": true
                        }
                    }
                },
                {
                    "name": "No",
                    "pipeline_override": {
                        "DeliveryJobsWuling": {
                            "enabled": false
                        }
                    }
                }
            ]
        }
    }
}
